{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "astras": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less",
          "standalone": true,
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "standalone": true,
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "standalone": true,
          "skipTests": true
        },
        "@schematics/angular:application": {
          "strict": true,
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "ats",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": {
              "base": "dist/astras",
              "browser": ""
            },
            "index": "src/index.html",
            "polyfills": [
              "src/polyfills.ts"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "less",
            "assets": [
              "src/favicon.svg",
              "src/assets",
              "src/firebase-messaging-sw.js",
              {
                "glob": "**/*",
                "input": "./node_modules/@ant-design/icons-angular/src/inline-svg/",
                "output": "/assets/"
              },
              {
                "glob": "**/*",
                "input": "src/assets/custom_icons/",
                "output": "/assets/"
              },
              "src/manifest.webmanifest"
            ],
            "styles": [
              "src/styles.less",
              {
                "input": "src/styles/default.less",
                "bundleName": "default",
                "inject": false
              },
              {
                "input": "src/styles/dark.less",
                "bundleName": "dark",
                "inject": false
              }
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/styles/themes",
                "src/styles/mixins",
                "src/styles/utils",
                "src/styles/components"
              ]
            },
            "scripts": [
              "src/assets/lib/charting_library/charting_library.js"
            ],
            "allowedCommonJsDependencies": [
              "flat",
              "json-patch",
              "gql-query-builder",
              "moment"
            ],
            "serviceWorker": "ngsw-config.json",
            "browser": "src/main.ts"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "2.6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4.5kb",
                  "maximumError": "9kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                },
                {
                  "replace": "src/app/build-specifics/ext-modules.ts",
                  "with": "src/app/build-specifics/ext-modules.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "devContour": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "2.6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4.5kb",
                  "maximumError": "9kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.dev.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "astras:build:production"
            },
            "devContour": {
              "buildTarget": "astras:build:production"
            },
            "development": {
              "buildTarget": "astras:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "astras:build"
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": [
              "src/polyfills.ts"
            ],
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "less",
            "assets": [
              "src/favicon.svg",
              "src/assets",
              "src/firebase-messaging-sw.js",
              {
                "glob": "**/*",
                "input": "./node_modules/@ant-design/icons-angular/src/inline-svg/",
                "output": "/assets/"
              },
              "src/manifest.webmanifest"
            ],
            "styles": [
              "src/styles.less"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/styles/themes",
                "src/styles/mixins",
                "src/styles/utils",
                "src/styles/components"
              ]
            },
            "scripts": [
              "src/assets/lib/charting_library/charting_library.js"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
